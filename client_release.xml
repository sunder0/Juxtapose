<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>client</id>
	<baseDirectory>Juxtapose-client</baseDirectory>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>bin/**</include>
                <include>conf/**</include>
				<include>lib/**</include>
			</includes>
            <excludes>
                <exclude>bin/startup_server.sh</exclude>
                <exclude>conf/cert/**</exclude>
                <exclude>conf/server.properties</exclude>
            </excludes>
		</fileSet>
	</fileSets>

	<moduleSets>
		<moduleSet>
			<includes>
				<include>com.sunder.juxtapose:juxtapose-client</include>
			</includes>
			<binaries>
				<outputDirectory>lib/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib/</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
