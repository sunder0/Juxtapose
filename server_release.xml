<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>server</id>
	<baseDirectory>Juxtapose-server</baseDirectory>
	<formats>
		<format>dir</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>bin/**</include>
                <include>conf/server.properties</include>
                <include>conf/cert/**</include>
                <include>conf/logback.xml</include>
                <include>lib/**</include>
			</includes>
            <excludes>
                <exclude>bin/startup_client.sh</exclude>
            </excludes>
		</fileSet>
	</fileSets>

	<moduleSets>
		<moduleSet>
			<includes>
				<include>com.sunder.juxtapose:juxtapose-server</include>
			</includes>
			<binaries>
				<outputDirectory>lib/</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib/</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
